<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MapboxDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/salad</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.MapboxDemo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ButtonStyle1" >
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/green</item>
    </style>
    <style name="ButtonStyle2" >
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/dark_green</item>
    </style>
    <style name="ButtonStyle3" >
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">2dp</item>
        <item name="backgroundTint">@color/red</item>
    </style>
    <style name="Theme.MapboxDemo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MapboxDemo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>